<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AdministrationPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/administration</jta-data-source>
    <class>com.marbl.administration.domain.Bill</class>
    <class>com.marbl.administration.domain.Car</class>
    <class>com.marbl.administration.domain.CityRate</class>
    <class>com.marbl.administration.domain.Driver</class>
    <class>com.marbl.administration.domain.Employee</class>
    <class>com.marbl.administration.domain.HighwayRate</class>
    <class>com.marbl.administration.domain.Rate</class>
    <class>com.marbl.administration.domain.RegionRate</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
